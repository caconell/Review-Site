@model ReviewsSite.Models.Product 


    <h1>Product Details</h1>
    <hr />
    <h4> Product ID: @Model.Id</h4>
    <h4>Product Name: @Model.Name</h4>
    <img src="@Model.Image" alt="Photo of @Model.Name" />
    <hr />
    <h4>Taco Reviews</h4>
    @foreach (var Review in Model.Reviews)
    {
        <p>@Review.Content</p>
    }
