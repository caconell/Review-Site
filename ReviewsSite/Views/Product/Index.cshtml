@model IEnumerable<ReviewsSite.Models.Product>
@{
    ViewBag.Title = "Taco List";
}

@section styles{
    <link rel="stylesheet" href="" />
}

<h2>Product List</h2>
<a href="/Product/Create">Add New Product</a>
<hr />
<img src="/images/gtaco.gif" alt="dancing taco" class="gtaco" />
<ul>
    @foreach (var product in Model)
    {
        <li><a href="/Product/Details/@product.Id">@product.Name</a> - <button onclick="location.href='/Product/Update/@product.Id'">Edit</button></li>
    }
</ul>


