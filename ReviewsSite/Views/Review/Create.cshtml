@model ReviewsSite.Models.Review

@{
    ViewData["Title"] = "Create a Review";
}

<h1>Create a Review</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <p>@ViewBag.ResultMessage</p>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" value="0" />
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label asp-for="Reviewername" class="control-label"></label>
                <input asp-for="Reviewername" class="form-control" />
                <span asp-validation-for="Reviewername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div>
                <p>
                    @ViewBag.Product.Name
                </p>
            </div>
            <div class="form-group">
                <input type="submit" value="Add a New Review" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
